{
    "name": "dru-hugo-site",
    "version": "1.0.0",
    "description": "Dewi Ria Utari Portfolio Website",
    "scripts": {
        "build:css": "npx tailwindcss -i ./assets/css/input.css -o ./static/css/styles.css --minify",
